* {
	color: $text_color;
	background: transparent;
	font-size: 14pt;
	opacity: 0.1;
}
#appTitle {
	font-size: 30px;
	margin-bottom: 10px;
	font-weight: bold;
}
#Widget {
	background: $background_1;
}
QPushButton {
	color: $button_color;
	position: relative;
	height: 36px;
	padding: 0 20px;
	margin: 6px;
	font-weight: 500;
	text-transform: uppercase;
	letter-spacing: 0.15em;
	border: none;
	background: $background_2;
	border-radius: 3px;
}
QPushButton::hover {
	background: $button_hover;
}
QPushButton:disabled {
	color: #8a8d9f;
	background: $button_disabled;
}
QListWidget {
	background: $background_2;
	border-radius: 3px;
}
QListWidget::item {
	letter-spacing: normal;
	min-height: 48px;
	outline: none;
	position: relative;
}
QListWidget::item::hover {
	background: $list_hover;
}
QListWidget::item:selected {
	background: $list_selected;
}
QPlainTextEdit {
	background: $background_2;
	border-radius: 3px;
	padding: 10px;
	line-height: 40px;
}
QLineEdit {
	background: $background_2;
	height: 36px;
	border: 0;
	border-radius: 3px;
	padding-left: 5px;
}
QComboBox {
	background: $background_2;
	color: $text_color;
	height: 36px;
	border: 0;
	border-radius: 3px;
}
QSpinBox {
	background: $background_2;
	color: $text_color;
	height: 36px;
	border: 0;
	border-radius: 3px;
	padding-left: 5px;
}
QRadioButton {
	min-height: 32px;
}
